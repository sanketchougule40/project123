pipeline {
    agent any

    tools {
        jdk 'java'       // Make sure 'java' is configured in Jenkins > Global Tool Configuration
        maven 'maven'    // Same for 'maven'
    }
        stage('Clean') {
            steps {
                sh 'mvn clean'
            }
        }

        stage('Validate') {
            steps {
                sh 'mvn validate'
            }
        }

        stage('Compile') {
            steps {
                sh 'mvn compile'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Package') {
            steps {
                sh 'mvn package'
            }
        }

        stage('Verify') {
            steps {
                sh 'mvn verify'
            }
        }
    }
}
