pipeline {
    agent any 
    tools {
        maven 'maven'
        jdk 'java'  // Must match the name in Jenkins Global Tool Config
    }
    stages {
        stage('Clean') { 
            steps {
                sh 'mvn clean'
            }
        }
        stage('Validate') { 
            steps {
                sh 'mvn validate'
            }
        }
        stage('Compile') { 
            steps {
                sh 'mvn compile'
            }
        }
        stage('Test') { 
            steps {
                sh 'mvn test'
            }
        }
        stage('Package') { 
            steps {
                sh 'mvn package'
            }
        }
        stage('Verify') { 
            steps {
                sh 'mvn verify'
            }
        }
    }
}
