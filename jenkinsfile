pipeline {
    agent any

    tools {
        jdk 'java'
        maven 'maven'
    }

    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/sanketchougule40/project123.git'
                // ðŸ‘† Replace this with your actual Git repo URL
            }
        }

        stage('Clean') {
            steps {
                sh 'mvn clean'
            }
        }
        stage('Validate') {
            steps {
                sh 'mvn validate'
            }
        }
        stage('Compile') {
            steps {
                sh 'mvn compile'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Package') {
            steps {
                sh 'mvn package'
            }
        }
        stage('Verify') {
            steps {
                sh 'mvn verify'
            }
        }
    }
}
